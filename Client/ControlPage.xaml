                 xct:ShadowEffect.Radius="24"
                 xct:ShadowEffect.Opacity="0.56"
                 xct:ShadowEffect.OffsetY="3">

            </BoxView>
            <Label x:Name="control_your_health"
				FontFamily="Poppins"
				FontAttributes="Bold"
				FontSize="32"
				TextColor="#000000"
				AbsoluteLayout.LayoutBounds="47,600,363,76"
				Text="Control Your Health"
			 />
            <Label x:Name="with_the_ipulse_device_you_can_control_and_see_your_pulse_rate_"
				FontFamily="Poppins"
				FontSize="18"
				TextColor="#7D7D7D"
				AbsoluteLayout.LayoutBounds="47,668,299,78"
				Text="With the iPulse device you can control and see your pulse rate."
